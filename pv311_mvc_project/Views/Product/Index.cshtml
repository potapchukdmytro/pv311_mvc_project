@model IEnumerable<Product>

<div style="display: flex">
    <h1>Товари</h1>
    <div style="flex-grow: 1; text-align: end">
        <a class="btn btn-dark" asp-action="Create">Додати товар</a>
    </div>
</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Amount</th>
                <th>Image</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Amount</td>
                    <td><img width="100" alt="@product.Name" src="~/images/products/@(product.Image ?? "productDefault.png")" /></td>
                    <td>@product.Category?.Name</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-info">Редагувати</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>Товари не знайдено</h2>
}